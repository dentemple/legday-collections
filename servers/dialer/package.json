{
  "name": "armstrong-dialer-server",
  "version": "1.0.0",
  "private": true,
  "description": "Dialer server for the armstrong app",
  "author": "Denny S. Temple <dev@dentemple.com>",
  "license": "UNLICENSED",
  "main": "server",
  "scripts": {
    "--": "-- START SCRIPTS --",
    "start": "nodemon dist",
    "serve": "node dist",
    "----": "-- TEST SCRIPTS --",
    "test": "jest -i",
    "test:watch": "npm test --watch",
    "-----": "-- HOUSEKEEPING SCRIPTS --",
    "update": "ncu -u && npm install && npm audit --fix",
    "update:check": "ncu"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "concurrently": "^5.1.0",
    "dotenv-safe": "^8.2.0",
    "express": "^4.17.1",
    "twilio": "^3.42.0"
  },
  "devDependencies": {
    "jest": "^25.2.3",
    "nodemon": "^2.0.2",
    "npm-check-updates": "^4.1.0",
    "prettier": "^2.0.2",
    "superagent": "^5.2.2",
    "supertest": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,json,md}": [
      "prettier --config ./config/prettier.config.js --write",
      "git add"
    ]
  }
}
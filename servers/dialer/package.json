{
  "name": "armstrong-dialer-server",
  "version": "1.0.0",
  "private": true,
  "description": "Voice server for the armstrong dialer app",
  "author": "Denny S. Temple <dev@dentemple.com>",
  "license": "UNLICENSED",
  "main": "dist",
  "scripts": {
    "--": "DEVELOPMENT SCRIPTS",
    "build": "tsc",
    "dev": "npm run dev:server",
    "dev:server": "npm run build && nodemon dist",
    "---": "PRODUCTION SCRIPTS",
    "start": "npm run start:server",
    "start:server": "npm run build && node dist",
    "deploy:heroku": "git push heroku heroku:master",
    "----": "TESTING SCRIPTS",
    "test": "jest -i",
    "test:watch": "npm test --watch",
    "-----": "HOUSEKEEPING SCRIPTS",
    "update": "ncu -u && npm install && npm audit --fix",
    "update:check": "ncu"
  },
  "dependencies": {
    "concurrently": "^5.1.0",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.3",
    "@types/jest": "^25.1.4",
    "@types/node": "^13.9.5",
    "@types/supertest": "^2.0.8",
    "jest": "^25.2.3",
    "nodemon": "^2.0.2",
    "npm-check-updates": "^4.1.0",
    "prettier": "^2.0.2",
    "superagent": "^5.2.2",
    "supertest": "^4.0.2",
    "ts-jest": "^25.2.1",
    "ts-node": "^8.8.1",
    "tslint": "^6.1.0",
    "typescript": "^3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,json,md}": [
      "prettier --config ./config/prettier.config.js --write",
      "git add"
    ]
  }
}
